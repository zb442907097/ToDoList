<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.admin.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddGroupActivity" />
        <activity android:name=".activity.IconChooseActivity" />
        <activity android:name=".activity.ToDoListActivity" />
        <activity android:name=".activity.AddToDoActivity"></activity>
    </application>

</manifest>